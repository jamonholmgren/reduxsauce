{
  "name": "reduxsauce",
  "version": "1.3.0",
  "description": "Some aesthetic toppings for your Redux meal.",
  "repository": {
    "type": "git",
    "url": "https://github.com/jkeam/reduxsauce.git"
  },
  "main": "./dist/reduxsauce.js",
  "scripts": {
    "test": "ava",
    "watch": "ava --watch",
    "coverage": "nyc ava",
    "coveralls": "nyc --reporter=text-lcov ava | coveralls",
    "build": "rollup -c",
    "lint": "standard",
    "prepublishOnly": "npm run build",
    "ci:publish": "yarn semantic-release",
    "semantic-release": "semantic-release"
  },
  "keywords": [
    "redux"
  ],
  "author": "Steve Kellock <steve@kellock.ca>",
  "license": "MIT",
  "files": [
    "dist/reduxsauce.js",
    "lib",
    "README.md",
    "index.d.ts"
  ],
  "dependencies": {
    "ramda": "^0.30.1"
  },
  "devDependencies": {
    "@ava/babel": "^2.0.0",
    "@babel/cli": "^7.26.4",
    "@babel/core": "^7.26.0",
    "@babel/eslint-parser": "^7.25.9",
    "@babel/preset-env": "^7.26.0",
    "@babel/register": "^7.25.9",
    "@rollup/plugin-babel": "^6.0.4",
    "@semantic-release/git": "^10.0.1",
    "ava": "^6.2.0",
    "coveralls": "^3.1.1",
    "nyc": "^17.1.0",
    "rollup": "^4.29.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-ramda": "^1.0.5",
    "semantic-release": "^24.2.0",
    "standard": "^17.1.2"
  },
  "peerDependencies": {
    "redux": "5.x"
  },
  "ava": {
    "require": [
      "@babel/register"
    ],
    "babel": {
      "testOptions": {
        "babelrc": false
      }
    }
  },
  "standard": {
    "parser": "@babel/eslint-parser"
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": "package.json",
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}
